<!ELEMENT lazy (instruction,literal,nop,tag,goto,skip,if,unless,syscall,contractcall,call,dowhile,while)*>

<!ELEMENT literal (#PCDATA)>
<!ATTLIST literal type (int|string|bytes|bool|null) #REQUIRED>
<!ATTLIST literal val CDATA #IMPLIED>

<!ELEMENT nop EMPTY>

<!ELEMENT tag (#PCDATA)>
<!ATTLIST tag id ID #REQUIRED>

<!ELEMENT goto (#PCDATA)>
<!ATTLIST goto cond (eq|ne|le|lt|ge|gt|if|ifnot) "">
<!ATTLIST goto target IDREF #REQUIRED>

<!ELEMENT skip (#PCDATA)>
<!ATTLIST skip cond (eq|ne|le|lt|ge|gt|if|ifnot) "">

<!ELEMENT if EMPTY>

<!ELEMENT unless EMPTY>

<!ELEMENT syscall (#PCDATA)>
<!ATTLIST syscall name CDATA #REQUIRED> <!-- TODO restrict syscall range -->

<!ELEMENT contractcall (#PCDATA)>
<!ATTLIST contractcall flag (None|ReadStates|WriteStates|States|AllowCall|ReadOnly|AllowNotify|All) "All">
<!ATTLIST contractcall method CDATA #REQUIRED>
<!ATTLIST contractcall hash CDATA #REQUIRED>

<!ELEMENT call (#PCDATA)>
<!ATTLIST call target IDREF #REQUIRED>

<!ELEMENT dowhile EMPTY>

<!ELEMENT while EMPTY>

<!ELEMENT instruction (#PCDATA)>
